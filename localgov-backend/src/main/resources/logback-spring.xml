<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- General application logs (spring.log) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/spring.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ðŸ”¼ ADDED: Dedicated appender for audit logs (audit.log) -->
    <appender name="AUDIT" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/localgov/audit.log</file> 
        <append>true</append>
        <encoder>
            <pattern>%msg%n</pattern> 
        </encoder>
    </appender>

    <!-- ðŸ”¼ ADDED: Audit logger with its own appender -->
    <logger name="com.localgov.audit" level="INFO" additivity="false">
        <appender-ref ref="AUDIT" />
    </logger>

    <!-- Root logger for everything else -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

</configuration>
